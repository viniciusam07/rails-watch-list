<div class="container">
  <div class="form">
    <h1>Add a new movie to your <%= @list.name %> list</h1>

    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment, placeholder: 'Add a comment' %>
      <%= f.association :movie, prompt: 'Select a movie', input_html: { class: 'select2' } %>
      <%= f.input :poster, as: :file %>
      <%= f.submit class: 'btn btn-primary'%>
    <% end %>

    <div style= "margin-top: 18px">
      <%= link_to "Back to List", list_path(@list), class: "btn btn-danger" %>
    </div>

  </div>
</div>
