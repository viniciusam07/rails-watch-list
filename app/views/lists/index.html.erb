<div class="home-banner">
  <div class="container">
    <h1>My Movie List</h1>
    <p><%= "You have #{@lists.count} list(s) added" %></p>
  </div>
</div>

<div class="container">
  <div class = "cards">
    <% @lists.each do |list| %>
      <% if list.photo.attached?  %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>') ">
          <%= link_to list.name, list_path(list) %>
        </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path 'emperor-penguins.jpg', height: 300, crop: :fill %>') ">
            <%= link_to list.name, list_path(list) %>
          </div>
      <% end %>
    <% end %>
  </div>
</div>

<p><%= link_to 'Add a new list', new_list_path %></p>
