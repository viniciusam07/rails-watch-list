<h2><%= @list.name %></h2>

<h3><%= "(#{@list.movies.count})" %>Movies added</h3>

<div class="card-deck">
<% @list.movies.each do |movie| %>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= movie.title %></h5>
      <div class="d-flex">
        <% movie.rating.round.times do %>
          <i class="far fa-star yellow"></i>
        <% end %>
      </div>
      <p class="card-text"> <%= 'teste' %> </p>
      <p>
        <%= link_to "Delete", bookmark_path(movie.bookmarks.find_by(list: @list)), method: :delete, data: { confirm: "Are you sure?" } %>
      </p>
    </div>
  </div>
<% end %>
</div>

<p><%= link_to 'Add a new Bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %></p>
<p><%= link_to 'Back to Lists', lists_path , class: "btn btn-primary" %></p>
<p><%= link_to "Delete All List", list_path(@list), method: :delete, data: { confirm: "Are you sure?" } %></p>
